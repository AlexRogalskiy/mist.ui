{
  "type": "object",
  "id": "setup-machine",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "setupMachineSubform": {
      "id": "setup_machine_subform",
      "type": "object",
      "format": "subform",
      "properties": {
        "nameAndQuantityContainer": {
          "name": "nameAndQuantityContainer",
          "id": "name_and_quantity_container",
          "type": "object",
          "format": "subformContainer",
          "omitTitle": true,
          "inline": true,
          "styles": {
            "container": {
              "gap": "100px",
              "margin": "10px 0",
              "padding": "10px 0"
            }
          },
          "properties": {
            "subform": {
              "$ref": "#/definitions/nameAndQuantitySubform"
            }
          }
        },
        "location": {
          "name": "location",
          "id": "location",
          "label": "Location",
          "type": "string",
          "required": "true",
          "format": "dropdown",
          "styles": {
            "outer": {
              "flexBasis": "100%",
              "display": "grid",
              "grid-template-columns": "1fr 1fr",
              "grid-gap": "1rem"
            }
          },
          "deps": [
            {
              "prop": "enum",
              "func": "getLocations",
              "dependsOn": ["cloudContainer.cloud", ".image", ".size"]
            },
            {
              "prop": "hidden",
              "func": "hideLocations",
              "dependsOn": "cloudContainer.cloud"
            },
            {
              "prop": "required",
              "func": "locationRequired",
              "dependsOn": "cloudContainer.cloud"
            }
          ]
        },
        "image": {
          "name": "image",
          "label": "Image",
          "type": "string",
          "format": "dropdown",
          "required": true,
          "searchable": true,
          "styles": {
            "outer": {
              "flexBasis": "100%",
              "display": "grid",
              "grid-template-columns": "1fr 1fr",
              "grid-gap": "1rem"
            }
          },
          "deps": [
            {
              "prop": "enum",
              "func": "getImages",
              "dependsOn": ["cloudContainer.cloud", ".location", ".size"]
            }
          ]
        },
        "size": {
          "label": "Size",
          "name": "size",
          "id": "size",
          "type": "string",
          "deps": [
            {
              "prop": "field",
              "func": "getSizes",
              "dependsOn": ["cloudContainer.cloud", ".location", ".image"]
            }
          ],
          "format": "mistSizeField",
          "styles": {
            "outer": {
              "flexBasis": "100%",
              "display": "grid",
              "grid-template-columns": "1fr 1fr",
              "grid-gap": "1rem"
            }
          }
        },
        "networkContainer": {
          "name": "net",
          "label": "Network",
          "id": "network_container",
          "type": "object",
          "format": "subformContainer",
          "hasToggle": false,
          "hidden": true,
          "deps": [
            {
              "prop": "hidden",
              "func": "hideNetworkContainer",
              "dependsOn": "cloudContainer.cloud"
            }
          ],
          "properties": {
            "subform": {
              "$ref": "./assets/forms/create-machine/networks.json#/definitions/networkSubform"
            }
          }
        },
        "KVMDisksContainer": {
          "name": "disks",
          "label": "",
          "id": "kvm_disks",
          "type": "object",
          "format": "subformContainer",
          "hasToggle": false,
          "hidden": true,
          "properties": {
            "subform": {
              "$ref": "#/definitions/KVMDisksSubform"
            }
          },
          "deps": [
            {
              "prop": "hidden",
              "func": "hideIfNotKVM",
              "dependsOn": "cloudContainer.cloud"
            }
          ]
        }
      }
    },
    "nameAndQuantitySubform": {
      "id": "name_and_quantity_subform",
      "type": "object",
      "format": "subform",
      "properties": {
        "name": {
          "name": "name",
          "label": "Machine Name",
          "noLabelFloat": true,
          "type": "string",
          "required": true,
          "charCounter": true,
          "helpText": "Fill in the machine's name",
          "minlength": 1,
          "maxlength": 9,
          "styles": {
            "outer": {
              "flexBasis": "70%"
            }
          },
          "deps": [
            {
              "func": "getNameRegex",
              "dependsOn": "cloudContainer.cloud"
            }
          ]
        },
        "quantity": {
          "name": "quantity",
          "label": "Quantity",
          "type": "string",
          "format": "number",
          "value": 1,
          "minimum": 1,
          "maximum": 100,
          "styles": {
            "outer": {
              "flexBasis": "10%",
              "margin-top": "1px"
            }
          }
        }
      }
    },
    "KVMDisksSubform": {
      "id": "kvm_disks_subform",
      "type": "object",
      "format": "subform",
      "properties": {
        "disk_size": {
          "type": "string",
          "format": "number",
          "helpText": "The VM's size will be the size of the image plus the number in GBs provided here",
          "helpUrl": "http://docs.mist.io/article/99-managing-kvm-with-mist-io"
        },
        "disk_path": {
          "type": "string",
          "helpText": "Where the VM disk file will be created",
          "helpUrl": "http://docs.mist.io/article/99-managing-kvm-with-mist-io"
        }
      }
    }
  }
}