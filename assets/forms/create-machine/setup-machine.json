{
  "type": "object",
  "id": "setup-machine",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "setupMachineSubform": {
      "id": "setup_machine_subform",
      "type": "object",
      "format": "subform",
      "properties": {
        "name": {
          "name": "name",
          "label": "Machine Name",
          "type": "string",
          "required": true,
          "charCounter": true,
          "helptext": "Fill in the machine's name",
          "minlength": 1,
          "maxlength": 9,
          "styles": {
            "outer": {
              "flexBasis": "100%"
            }
          },
          "deps": [
            {
              "func": "getNameRegex",
              "dependsOn": "cloudContainer.cloud"
            }
          ]
        },
        "location": {
          "name": "location",
          "id": "location",
          "label": "Location",
          "type": "string",
          "required": "true",
          "format": "dropdown",
          "styles": {
            "outer": {
              "flexBasis": "100%"
            }
          },
          "deps": [
            {
              "prop": "enum",
              "func": "getLocations",
              "dependsOn": ["cloudContainer.cloud", ".image", ".size"]
            },
            {
              "prop": "hidden",
              "func": "hideLocations",
              "dependsOn": "cloudContainer.cloud"
            },
            {
              "prop": "required",
              "func": "locationRequired",
              "dependsOn": "cloudContainer.cloud"
            }
          ]
        },
        "image": {
          "name": "image",
          "label": "Image",
          "type": "string",
          "format": "dropdown",
          "required": true,
          "searchable": true,
          "styles": {
            "outer": {
              "flexBasis": "100%"
            }
          },
          "deps": [
            {
              "prop": "enum",
              "func": "getImages",
              "dependsOn": ["cloudContainer.cloud", ".image", ".size"]
            }
          ]
        },
        "size": {
          "label": "Size",
          "name": "size",
          "id": "size",
          "type": "string",
          "deps": [
            {
              "prop": "field",
              "func": "getSizes",
              "dependsOn": "cloudContainer.cloud"
            },
            {
              "prop": "field",
              "func": "getSizes",
              "dependsOn": ".location"
            }
          ],
          "format": "mistSizeField",
          "styles": {
            "outer": {
              "flexBasis": "100%"
            }
          }
        },
        "networkContainer": {
          "name": "net",
          "label": "Network",
          "id": "network_container",
          "type": "object",
          "format": "subformContainer",
          "hasToggle": false,
          "hidden": true,
          "deps": [
            {
              "prop": "hidden",
              "func": "hideNetworkContainer",
              "dependsOn": "cloudContainer.cloud"
            }
          ],
          "properties": {
            "subform": {
              "$ref": "./assets/forms/create-machine/networks.json#/definitions/networkSubform"
            }
          }
        },
        "KVMDisksContainer": {
          "name": "disks",
          "label": "",
          "id": "kvm_disks",
          "type": "object",
          "format": "subformContainer",
          "hasToggle": false,
          "hidden": true,
          "properties": {
            "subform": {
              "$ref": "#/definitions/KVMDisksSubform"
            }
          },
          "deps": [
            {
              "prop": "hidden",
              "func": "hideIfNotKVM",
              "dependsOn": "cloudContainer.cloud"
            }
          ]
        }
      }
    },
    "KVMDisksSubform": {
      "id": "kvm_disks_subform",
      "type": "object",
      "format": "subform",
      "properties": {
        "disk_size": {
          "type": "string",
          "format": "number"
        },
        "disk_path": {
          "type": "string"
        }
      }
    }
  }
}