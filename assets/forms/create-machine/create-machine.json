{
  "type": "object",
  "id": "create-machine-form",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Create machine form",
  "submitButtonLabel": "Launch",
  "canClose": false,
  "additionalProperties": false,
  "showJSON": true,
  "properties": {
    "cloudContainer": {
      "name": "cloudContainer",
      "id": "cloud_container",
      "type": "object",
      "format": "subformContainer",
      "omitNameFromPayload": true,
      "formatPayload": "formatCloudContainerPayload",
      "properties": {
        "subform": {
          "$ref": "#/definitions/cloudSubform"
        }
      }
    },
    "setupMachineContainer": {
      "name": "setupMachine",
      "id": "setup_machine_container",
      "type": "object",
      "format": "subformContainer",
      "omitNameFromPayload": true,
      "hasToggle": false,
      "properties": {
        "subform": {
          "$ref": "./assets/forms/create-machine/setup-machine.json#/definitions/setupMachineSubform"
        }
      }
    },
    "mistFieldsContainer": {
      "name": "mistFieldsContainer",
      "label": "",
      "id": "mist_fields_container",
      "type": "object",
      "format": "subformContainer",
      "classes": "stacked",
      "omitNameFromPayload": true,
      "properties": {
        "subform": {
          "$ref": "#/definitions/mistFieldsSubform"
        }
      }
    }
  },
  "definitions": {
    "cloudSubform": {
      "id": "cloud_subform",
      "type": "object",
      "format": "subform",
      "properties": {
        "cloud": {
          "label": "Cloud",
          "id": "cloud",
          "type": "string",
          "format": "dropdown",
          "required": true,
          "x-mist-enum": "clouds",
          "styles": {
            "outer": {
              "display": "grid",
              "grid-template-columns": "1fr 1fr",
              "grid-gap": "1rem"
            }
          }
        }
      }
    },
    "setExpirationSubform": {
      "id": "set_expiration_subform",
      "type": "object",
      "format": "subform",
      "properties": {
        "action": {
          "id": "action",
          "type": "string",
          "format": "dropdown",
          "value": "STOP",
          "enum": ["STOP", "DESTROY"],
          "styles": {
            "outer": {
              "grid-area": "action"
            }
          }
        },
        "in": {
          "name": "in",
          "id": "in",
          "label": "in",
          "type": "string",
          "format": "durationField",
          "value": "1d",
          "styles": {
            "outer": {
              "grid-area": "action-days"
            }
          }
        },
        "notify": {
          "label": "Notify me",
          "name": "notify",
          "id": "notify",
          "value": true,
          "type": "boolean",
          "noLabelFloat": true,
          "styles": {
            "outer": {
              "grid-area": "notify",
              "margin-top": "auto",
              "margin-bottom": "13px"
            }
          }
        },
        "before": {
          "name": "before",
          "id": "before",
          "label": "before",
          "type": "string",
          "value": "1h",
          "format": "durationField",
          "styles": {
            "outer": {
              "grid-area": "notify-days"
            }
          }
        }
      }
    },
    "postDeployInlineScript": {
      "id": "post_deploy_inline_script",
      "type": "object",
      "format": "subform",
      "properties": {
        "inlineScript": {
          "label": "Inline Script",
          "id": "inline_script",
          "helpText": "The inline script will run after provisioning",
          "type": "string"
        }
      }
    },
    "postDeploySelectExisting": {
      "id": "post_deploy_select_existing",
      "type": "object",
      "format": "subform",
      "properties": {
        "script": {
          "label": "Script",
          "id": "post_deploy_script",
          "type": "string",
          "format": "dropdown",
          "searchable": true,
          "helpText": "The selected script will run after provisioning",
          "x-mist-enum": "getScripts"
        },
        "optionalScriptParams": {
          "label": "Optional Script Params",
          "id": "optional_script_params",
          "type": "string"
        }
      }
    },

    "createDNSRecordSubform": {
      "id": "create_dns_subform",
      "type": "object",
      "format": "subform",
      "properties": {
        "recordName": {
          "label": "Record name",
          "name": "recordName",
          "id": "record_name",
          "type": "string"
        },
        "dnsZone": {
          "label": "DNS zone",
          "name": "dnsZone",
          "id": "dns_zone",
          "type": "string",
          "format": "dropdown",
          "x-mist-enum": "getZones"
        }
      }
    },
    "mistFieldsSubform": {
      "id": "mist_fields_subform",
      "type": "object",
      "format": "subform",
      "properties": {
        "attachVolumeContainer": {
          "name": "attachVolumeContainer",
          "label": "Attach volume",
          "helpText": "Attach a volume to the machine.",
          "id": "attachVolume_container",
          "type": "object",
          "format": "subformContainer",
          "hasToggle": true,
          "properties": {
            "subform": {
              "$ref": "./assets/forms/create-machine/volumes.json#/definitions/attachVolumeSubform"
            }
          },
          "deps": [
            {
              "prop": "hidden",
              "func": "showVolumeContainer",
              "dependsOn": "cloudContainer.cloud"
            }
          ]
        },
        "setExpirationContainer": {
          "name": "setExpirationContainer",
          "label": "Set expiration",
          "id": "setExpiration_container",
          "type": "object",
          "format": "subformContainer",
          "helpText": "Set an expiration date when the machine will stop or be destroyed",
          "hasToggle": true,
          "styles": {
            "outer": {
              "display": "grid",
              "grid-template-columns": "1fr 1fr",
              "grid-gap": "1rem"
            },
            "container": {
              "display": "grid",
              "grid-template-columns": "1fr 1fr",
              "grid-template-areas" :"'toggle toggle' 'action action-days' 'notify notify-days'"
            },
            "containerOpen": {
              "background-color": "#ebebeb"
            }
          },
          "properties": {
            "subform": {
              "$ref": "#/definitions/setExpirationSubform"
            }
          }
        },
        "postDeployScriptContainer": {
          "name": "postDeployScriptContainer",
          "label": "Run post-deploy script",
          "id": "postDeployScript_container",
          "type": "object",
          "format": "subformContainer",
          "helpText": "Open options to run a script immediately after provisioning",
          "hasToggle": true,
          "properties": {
            "tabs": {
              "enum": [
                {
                  "label": "Inline Script",
                  "$ref": "#/definitions/postDeployInlineScript"
                },
                {
                  "label": "Select Existing",
                  "$ref": "#/definitions/postDeploySelectExisting"
                }
              ]
            }
          }
        },
        "scheduleTaskContainer": {
          "name": "scheduleTaskContainer",
          "label": "Schedule a task",
          "id": "scheduleTask_container",
          "type": "object",
          "format": "subformContainer",
          "helpText": "Enable a scheduled action on this machine",
          "hasToggle": true,
          "properties": {
            "subform": {
              "$ref": "./assets/forms/create-machine/schedule-tasks.json#/definitions/scheduleTaskSubform"
            }
          }
        },
        "fqdn": {
          "name": "createDNSRecordContainer",
          "label": "Create DNS record",
          "id": "createDNSRecord_container",
          "type": "object",
          "format": "subformContainer",
          "helpText": "Create an A record on an existing DNS zone that will point to the public ip address of the machine.",
          "hasToggle": true,
          "properties": {
            "subform": {
              "$ref": "#/definitions/createDNSRecordSubform"
            }
          },
          "styles": {
            "containerOpen": {
              "background-color": "#ebebeb"
            }
          }
        },
        "cloudInit": {
          "label": "Cloud Init",
          "type": "string",
          "helpText": "Start your Cloud Init script with #!/bin/bash or use a valid yaml configuration file starting with #cloud-config"
        },
        "enableMonitoring": {
          "label": "Enable Monitoring",
          "name": "enableMonitoring",
          "id": "enable_monitoring",
          "value": false,
          "type": "boolean"
        },
        "save": {
          "label": "Save provisioning plan as template",
          "id": "save_plan",
          "value": false,
          "type": "boolean"
        },
        "templateName": {
          "label": "Template name",
          "id": "template_name",
          "type":"string",
          "deps": [
            {
              "prop": "hidden",
              "func": "hideTemplateName",
              "dependsOn": ".save"
            }
          ]
        }
      }
    }
  }
}